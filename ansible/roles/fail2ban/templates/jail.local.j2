[DEFAULT]
# Ban hosts for 24 hours (86400 seconds)
bantime = {{ fail2ban_bantime | default(86400) }}

# A host is banned if it has generated "maxretry" during the last "findtime" seconds
findtime = {{ fail2ban_findtime | default(600) }}

# "maxretry" is the number of failures before a host get banned
maxretry = {{ fail2ban_maxretry | default(3) }}

# Destination email address for action that send you an email
{% if fail2ban_destemail is defined and fail2ban_destemail != "" %}
destemail = {{ fail2ban_destemail }}
{% else %}
destemail = root@localhost
{% endif %}

# Sender email address
sendername = Fail2Ban

# Email action
action = %(action_)s

[sshd]
enabled = true
port = ssh
# Use systemd journal backend (works on all modern Ubuntu systems)
backend = systemd

