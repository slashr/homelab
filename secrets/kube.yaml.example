# Example structure for Kubernetes secrets
# Copy this to kube.yaml and encrypt with: sops -e -i kube.yaml
#
# Values must be base64-encoded (Terraform decodes them internally)
# Get values directly from your cluster without decoding:
#   kubectl config view --raw -o jsonpath='{.users[0].user.client-certificate-data}'
#   kubectl config view --raw -o jsonpath='{.users[0].user.client-key-data}'
#   kubectl config view --raw -o jsonpath='{.clusters[0].cluster.certificate-authority-data}'

kube_client_cert: BASE64_ENCODED_CLIENT_CERT_HERE
kube_client_key: BASE64_ENCODED_CLIENT_KEY_HERE
kube_cluster_ca_cert: BASE64_ENCODED_CA_CERT_HERE
