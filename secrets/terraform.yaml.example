# Terraform secrets for all cloud providers and services
# Copy this to terraform.yaml and encrypt with: sops -e -i terraform.yaml
#
# After encryption, you can delete the following GitHub Actions secrets:
#   - TF_API_TOKEN
#   - GCP_CREDENTIALS
#   - TF_USER_OCID, TF_TENANCY_OCID, TF_SSH_AUTHORIZED_KEYS
#   - TF_OCI_PRIVATE_KEY, TF_FINGERPRINT, TF_COMPARTMENT_ID
#   - TF_CLOUDFLARE_API_TOKEN
#   - TF_TAILSCALE_OAUTH_CLIENT_ID, TF_TAILSCALE_OAUTH_CLIENT_SECRET

# Terraform Cloud API token (used by all Terraform jobs)
api_token: YOUR_TF_CLOUD_API_TOKEN

# GCP credentials (JSON service account key)
gcp_credentials: |
  {
    "type": "service_account",
    "project_id": "your-project",
    "private_key_id": "...",
    "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
    "client_email": "...",
    "client_id": "...",
    "auth_uri": "https://accounts.google.com/o/oauth2/auth",
    "token_uri": "https://oauth2.googleapis.com/token"
  }

# Oracle Cloud Infrastructure (OCI) credentials
user_ocid: ocid1.user.oc1..your_user_ocid
tenancy_ocid: ocid1.tenancy.oc1..your_tenancy_ocid
compartment_id: ocid1.compartment.oc1..your_compartment_id
fingerprint: aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99
ssh_authorized_keys: ssh-rsa AAAA... your-key
oci_private_key: |
  -----BEGIN RSA PRIVATE KEY-----
  your_oci_api_private_key_here
  -----END RSA PRIVATE KEY-----

# Cloudflare API token (for DNS management)
cloudflare_api_token: YOUR_CLOUDFLARE_API_TOKEN

# Tailscale OAuth credentials (for Kubernetes operator)
tailscale_oauth_client_id: YOUR_TAILSCALE_OAUTH_CLIENT_ID
tailscale_oauth_client_secret: YOUR_TAILSCALE_OAUTH_CLIENT_SECRET
