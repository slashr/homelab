# Terraform secrets (actual sensitive values only)
# Copy this to terraform.yaml and encrypt with: sops -e -i terraform.yaml
#
# Non-secret config values (OCIDs, fingerprints, public keys) are in:
#   - oracle/terraform.tfvars
#   - kubernetes/terraform.tfvars

# Terraform Cloud API token (used by all Terraform jobs)
api_token: YOUR_TF_CLOUD_API_TOKEN

# GCP credentials (JSON service account key)
gcp_credentials: |
  {
    "type": "service_account",
    "project_id": "your-project",
    "private_key_id": "...",
    "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
    "client_email": "...",
    "client_id": "...",
    "auth_uri": "https://accounts.google.com/o/oauth2/auth",
    "token_uri": "https://oauth2.googleapis.com/token"
  }

# Oracle Cloud Infrastructure API private key
oci_private_key: |
  -----BEGIN RSA PRIVATE KEY-----
  your_oci_api_private_key_here
  -----END RSA PRIVATE KEY-----

# Cloudflare API token (for DNS management)
cloudflare_api_token: YOUR_CLOUDFLARE_API_TOKEN

# Tailscale OAuth client secret (for Kubernetes operator)
tailscale_oauth_client_secret: YOUR_TAILSCALE_OAUTH_CLIENT_SECRET
